
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-top:25px">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Şehir Listele</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            
                        </div>

                    </div>

                </div>
                <div class="card-footer">
                    <input type="button" value="Şehirleri Getir" class="btn btn-primary float-left" id="getcities" />
                </div>
            </div>


        </div>


        <div class="col-md-6">
            <div class="col">
                <ul class="list-group" id="citylist">
                    <li class="list-group-item"></li>


                </ul>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.0.0.js"></script>
<script>
    $(document).ready(function () {
         $("#CityName").val();
        var ul = $("#citylist");
        $("#getcities").click(function () {
            $.ajax({
                type: "Get",
                url: "https://localhost:44302/api/city",
                success: function (data) {

                    ul.empty();
                    $.each(data, function (index, val) {
                        var li = "<li class='list-group-item'>" + "City Name: " + val.CityName + "<br/>" + " City Code: " + val.CityCode + "<br/>" + " District Name: " + val.DistrictName + "<br/>" +" Zip Code: "+val.ZipCode+ "</li>"
                        ul.append(li);
                    })
                },
                error: function (data) {
                    console.log(data);
                },
            });

        });
    });
</script>



